<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.SignUpSuccessActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/cancel_logo"
        android:onClick="onClickExit"
        android:padding="4dp"
        android:src="@drawable/outline_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_success_title"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="54sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_success_sub_title"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/successful_create_account"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="50dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/successful_done" />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/btn_custom"
            android:elevation="4dp"
            android:onClick="onClickSignUpSuccess"
            android:text="@string/continue_btn"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>